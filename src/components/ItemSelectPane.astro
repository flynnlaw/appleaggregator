---
import PaneItem from './ItemSelectPaneItem.astro';

interface PaneItem {
  href: string;
  svgPath: string;
  text: string;
  customClass: string;
}

// Define the Props interface for ItemSelectPane
interface Props {
  paneItems: PaneItem[];  // paneItems is an array of PaneItem
}

const { paneItems } = Astro.props;  // Get paneItems from props

---

<itemselect
  class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto"
>
  <!-- "Name" Link on the Left -->
  <a href="/" class="flex items-center gap-x-4">
    <p class="uppercase text-3xl text-zinc-900">Name</p>
  </a>

  <!-- Centered List of Items -->
  <ul class="flex gap-x-6 justify-center">
    {paneItems && paneItems.length > 0 ? (
      paneItems.map((item) => (
        <li>
          <PaneItem 
            href={item.href} 
            svgPath={item.svgPath} 
            text={item.text} 
            customClass={item.customClass} 
          />
        </li>
      ))
    ) : (
      <li>No items available</li>
    )}
  </ul>
</itemselect>

<style>
  /* General list item styles */
  ul {
    display: flex;
    gap: 8px;
    padding: 0;
    margin: 0;
    list-style-type: none;
    justify-content: center; /* Center-align items */
    flex-grow: 1; /* Allow ul to grow and fill available space */

  }

</style>